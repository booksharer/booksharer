<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"

    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="0dp">
    <android.support.v7.widget.CardView
        android:id="@+id/mCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#ffffff"
        android:layout_margin="8dp"
        card_view:cardElevation="1px"
        card_view:cardCornerRadius="4dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/list_tv_PolicyKind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textStyle="bold"
                    android:text="险种"/>
                <TextView
                    android:id="@+id/list_tv_PolicyState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textColor="#2977c3"
                    tools:text="保险状态"/>
                <TextView
                    android:id="@+id/list_tv_PolicyDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/list_tv_PolicyKind"
                    android:paddingTop="4dp"
                    tools:text="保险详情"/>
                <TextView
                    android:id="@+id/list_tv_PolicyPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/list_tv_PolicyState"
                    android:textStyle="italic"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    tools:text="保险价格"/>
                <Button
                    android:id="@+id/list_bt_Apply"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    tools:text="申请理赔"
                    android:layout_below="@id/list_tv_PolicyPrice"/>
                <Button
                    android:id="@+id/list_bt_Policy"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:text="查看详情"
                    android:layout_below="@id/list_tv_PolicyPrice"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>