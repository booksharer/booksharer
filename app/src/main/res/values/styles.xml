<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Spinner" parent="android:Theme.Holo.Light"></style>
    <style name="common_horizontal_division_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#dddddd</item>
    </style>

    <style name="common_vertical_division_line_style">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#dddddd</item>
    </style>

    <style name="Font20">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="Font18">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="Font16">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="FontHint">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#4d4b4b</item>
    </style>

    <style name="FontTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#4d4b4b</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>
    <style name="Blank">
        <item name="android:background">#eeeeee</item>
    </style>
</resources>
